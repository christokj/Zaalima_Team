{
    "version": 2,
    "builds": [
        {
            "src": "apps/frontend/package.json",
            "use": "@vercel/static-build"
        },
        {
            "src": "apps/backend/package.json",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "apps/backend/api/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "apps/frontend/dist/index.html"
        }
    ]
}