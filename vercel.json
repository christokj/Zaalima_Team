{
    "version": 2,
    "builds": [
        {
            "src": "apps/frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "../public"
            }
        },
        {
            "src": "apps/backend/src/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "apps/backend/src/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/public/index.html"
        }
    ]
}